@model IEnumerable<Product>
<div>
    <img src="https://github.com/Maureenperez6/Lash/blob/main/images/eyes%201.jpg?raw=true" class="w3-image" width="200" height="200">
    </div>
<h2 style="color:DarkGrey;">Products</h2>
<div style="display: block">
    <a href="/Product/InsertProduct/">Create a New Product</a>
</div>

<table style="background-color:AliceBlue;" class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>Stock Level</th>
    </tr>
    
    @foreach (var product in Model)
    {
     <tr>
         <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>
         <td>@product.Name</td>
         <td>@product.Price</td>
         <td>@product.CategoryID</td>
         <td>@product.OnSale</td>
         <td>@product.StockLevel</td>
     </tr>
        
    }
</table>
