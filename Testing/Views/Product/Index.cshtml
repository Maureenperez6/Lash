@model IEnumerable<Product>
<div>
    <img align="right" src="https://github.com/Maureenperez6/Lash/blob/main/images/extension.jpg?raw=true" class="w3-image" width="85" height="85">
    
<h2 style="color:DarkGrey;">Products</h2>
<div style="display: block">
    <a href="/Product/InsertProduct/">Create a New Product</a>
</div>

<table style="background-color:Linen;" class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>Stock Level</th>
    </tr>
    
    @foreach (var product in Model)
    {
     <tr>
         <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>
         <td>@product.Name</td>
         <td>@product.Price</td>
         <td>@product.CategoryID</td>
         <td>@product.OnSale</td>
         <td>@product.StockLevel</td>
     </tr>
        
    }
</table>
<div>
   <img align="left" src="https://github.com/Maureenperez6/Lash/blob/main/images/eye%20lashes.jpg?raw=true" class="w3-image" width="100" height="100">
   <img align="right" src="https://github.com/Maureenperez6/Lash/blob/main/images/spoolie.jpg?raw=true" class="w3-image" width="85" height="80">
    </div>

